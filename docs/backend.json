
{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents a user's profile information.",
      "type": "object",
      "properties": {
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        }
      },
      "required": ["email"]
    },
    "Transaction": {
      "title": "Transaction",
      "description": "Represents a single financial transaction.",
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["income", "expense", "e-transfer-send", "e-transfer-receive"]
        },
        "amount": {
          "type": "number"
        },
        "category": {
          "type": "string",
          "description": "The category of the transaction (for income/expense)."
        },
        "contact": {
          "type": "string",
          "description": "The contact person for an e-transfer."
        },
        "date": {
          "type": "string",
          "format": "date-time"
        },
        "description": {
          "type": "string"
        },
        "by": {
          "type": "string",
          "description": "Identifier for the user who created the transaction."
        }
      },
      "required": ["type", "amount", "date", "by"]
    },
    "Budget": {
      "title": "Budget",
      "description": "Represents a monthly budget for a category.",
      "type": "object",
      "properties": {
        "category": {
          "type": "string"
        },
        "amount": {
          "type": "number"
        },
        "by": {
          "type": "string",
          "description": "Identifier for the user who created the budget."
        }
      },
      "required": ["category", "amount", "by"]
    },
    "Category": {
      "title": "Category",
      "description": "Represents a user-defined transaction category.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "The name of the category."
        },
        "type": {
          "type": "string",
          "enum": ["income", "expense"],
          "description": "The type of the category (income or expense)."
        }
      },
      "required": ["name", "type"]
    },
    "RecurringTransaction": {
      "title": "Recurring Transaction",
      "description": "Represents a recurring payment or subscription.",
      "type": "object",
      "properties": {
        "description": {
          "type": "string"
        },
        "amount": {
          "type": "number"
        },
        "category": {
          "type": "string"
        },
        "frequency": {
          "type": "string",
          "enum": ["daily", "weekly", "monthly", "yearly"]
        },
        "startDate": {
          "type": "string",
          "format": "date-time"
        },
        "nextDueDate": {
          "type": "string",
          "format": "date-time"
        },
        "by": {
          "type": "string",
          "description": "Identifier for the user who created the transaction."
        }
      },
      "required": [
        "description",
        "amount",
        "category",
        "frequency",
        "startDate",
        "nextDueDate",
        "by"
      ]
    }
  },
  "auth": {
    "providers": ["Google"],
    "customClaims": {
      "admin": {
        "type": "boolean",
        "description": "Grants administrator privileges."
      }
    }
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/UserProfile"
      },
      "description": "Stores user profile information."
    },
    "/users/{userId}/transactions/{transactionId}": {
      "schema": {
        "$ref": "#/entities/Transaction"
      },
      "description": "Stores all transactions for a specific user."
    },
    "/users/{userId}/budgets/{budgetId}": {
      "schema": {
        "$ref": "#/entities/Budget"
      },
      "description": "Stores budget settings for a user."
    },
    "/users/{userId}/categories/{categoryId}": {
      "schema": {
        "$ref": "#/entities/Category"
      },
      "description": "Stores custom categories for a user."
    },
    "/users/{userId}/recurringTransactions/{recurringTransactionId}": {
      "schema": {
        "$ref": "#/entities/RecurringTransaction"
      },
      "description": "Stores recurring transactions for a user."
    }
  }
}
